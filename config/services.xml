<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults autowire="true" autoconfigure="true"/>
        <prototype namespace="Zhortein\SeoTrackingBundle\" resource="../src/" exclude="../src/{DependencyInjection,Entity,Kernel.php}"/>

        <service id="ZhorTein\SeoTrackingBundle\DataCollector\SeoTrackingDataCollector">
            <tag name="data_collector"
                 template="@ZhorteinSeoTracking/collector/seo_tracking.html.twig"
                 id="seo_tracking"
                 priority="0"/>
        </service>

        <service id="doctrine.resolve_target_entity_listener" class="Doctrine\ORM\Tools\ResolveTargetEntityListener">
            <tag name="doctrine.event_subscriber" />
            <call method="addResolveTargetEntity">
                <argument>Zhortein\SeoTrackingBundle\Entity\PageCallInterface</argument>
                <argument>%zhortein_seo_tracking.page_call_class%</argument>
                <argument type="collection" />
            </call>
            <call method="addResolveTargetEntity">
                <argument>Zhortein\SeoTrackingBundle\Entity\PageCallHitInterface</argument>
                <argument>%zhortein_seo_tracking.page_call_hit_class%</argument>
                <argument type="collection" />
            </call>
        </service>

    </services>
</container>